{
	"name": "vscode-fast-intl",
	"displayName": "vscode-fast-intl",
	"description": "intl fast vscode",
	"version": "2.0.0",
	"publisher": "xiawen",
	"icon": "app-logo.jpg",
	"engines": {
		"vscode": "^1.51.0"
	},
  "license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/xiaotangdou/vscode-fast-intl"
	},
	"categories": [
		"Other",
		"Linters"
	],
	"activationEvents": [
		"onCommand:vscode-fast-intl.helloFastIntl",
		"onLanguage:typescript",
		"onLanguage:typescriptreact",
		"onLanguage:javascriptreact",
		"onLanguage:javascript"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-fast-intl.helloFastIntl",
				"title": "Hello Fast Intl"
			},
			{
				"command": "vscode-fast-intl.autoExtract",
				"title": "Replace Chinese copy of current file"
			}
		],
		"keybindings": [
			{
			  "command": "vscode-fast-intl.autoExtract",
			  "key": "cmd+ctrl+r",
			  "mac": "cmd+ctrl+r"
			},
			{
			  "command": "vscode-fast-intl.openFastIntl",
			  "key": "cmd+ctrl+o",
			  "mac": "cmd+ctrl+o"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Fast Intl",
			"properties": {
        "vscode-fast-intl.openFastIntl": {
					"type": "boolean",
					"default": true,
					"description": "是否开启 Fast Intl"
				},
				"vscode-fast-intl.langPrefix": {
          "type": "string",
          "default": ".fastIntl/zh-hans/",
          "description": "语言默认存储路径"
				},
				"vscode-fast-intl.enableReplaceSuggestion": {
					"type": "boolean",
					"default": true,
					"description": "替换建议"
				},
				"vscode-fast-intl.i18nFilesPattern": {
					"type": "string",
					"default": "**/*.+(js|jsx|ts*)",
					"description": "匹配翻译文件"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/register": "^7.15.3",
		"@types/fs-extra": "^9.0.6",
		"@types/lodash": "^4.14.168",
		"@types/prettier": "^2.1.6",
		"fs-extra": "^9.1.0",
		"lodash": "^4.17.20",
		"prettier": "^2.2.1",
		"minimatch": "^3.0.4",
		"typescript": "^4.1.2"
	}
}
